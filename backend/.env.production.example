# Backend Production Environment Example
# Copy to your hosting platform's env vars (Railway/Render). Do not commit secrets.

# MongoDB Atlas
MONGODB_URL=mongodb+srv://moringa_app:REPLACE_WITH_PASSWORD@moringa-cluster.xxxxx.mongodb.net/moringa_food_ordering?retryWrites=true&w=majority
MONGODB_DATABASE_NAME=moringa_food_ordering

# JWT
SECRET_KEY=REPLACE_WITH_LONG_RANDOM_SECRET
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (set to your production domain)
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]

# App flags
DEBUG=false
ENVIRONMENT=production

# Optional integrations
REDIS_URL=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Payments
STRIPE_DEMO_MODE=true
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
