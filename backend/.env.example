# === Backend Environment Example ===
# Copy this file to `.env` in the ./backend folder and fill values

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE_NAME=moringa_food_ordering
# Optional test DB
MONGODB_TEST_DATABASE_NAME=moringa_food_ordering_test

# Security / JWT
SECRET_KEY=change-this-to-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS / Frontend
FRONTEND_URL=http://localhost:3000
# JSON array of allowed origins
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:3002"]

# App
APP_NAME=Moringa Food Ordering System
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development

# File uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/webp"]

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Stripe (set STRIPE_DEMO_MODE=true to bypass Stripe in demo)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_DEMO_MODE=true

# Twilio (optional, for phone verification)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email SMTP (optional)
SMTP_SERVER=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=

# M-Pesa (optional)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_BUSINESS_SHORT_CODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL=
MPESA_ENVIRONMENT=sandbox
# Moringa Backend Example Environment File
# Copy to .env and adjust values. For demo/testing you can leave Stripe empty to enable demo mode.

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE_NAME=moringa_food_ordering
MONGODB_TEST_DATABASE_NAME=moringa_food_ordering_test

# JWT
SECRET_KEY=your-super-secret-jwt-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
FRONTEND_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# App
APP_NAME=Moringa Food Ordering System
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development

# Email (optional)
SMTP_SERVER=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=

# Stripe (leave blank for demo mode)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Force demo even if keys set ("true"/"false")
STRIPE_DEMO_MODE=false

# M-Pesa (optional sandbox creds)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_BUSINESS_SHORT_CODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL=
MPESA_ENVIRONMENT=sandbox
